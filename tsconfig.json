{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["*"],
      "lib/*": ["lib/*"],
      "render/*": ["render/*"]
    }
  }
}
